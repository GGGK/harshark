/* Light Stylesheet */

QTabWidget, QGroupBox, QLineEdit, QPushButton {
    font-family: "Inter UI";
    font-size: 10pt;
}

QTextEdit, QPlainTextEdit, QTableWidget {
    font-family: "Droid Sans Mono";
    font-size: 10pt;
}

QTableWidget {
    gridline-color: #e4e4e4;
}

QLineEdit {
    border: 1px solid #c1c1c1;
    border-radius: 2px;
    padding-left: 5px;
    margin: 2px 0px 2px 0px;
}

QGroupBox {
    font-weight: bold;
}

QTabBar::tab:enabled {
    background-color: #daf7a6 ;
    border: 1px solid #c1c1c1;
}

QTabBar::tab:selected {
    color: red;
}